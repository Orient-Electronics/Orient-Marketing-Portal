<div class="block">
  <div class="block-title">
    <h2><strong>Announcement </strong></h2>
    <% if can? :create, Announcement %> 
      <div class="new-button pull-right">
        <%= link_to raw("<i class='gi gi-new_window_alt'></i> Add Announcement"), new_announcement_path,  :class => "btn btn-large btn-default" %>
      </div>
    <% end %> 
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-vcenter">
      <thead>
        <tr>
          <th>Announcement</th>
          <th>Create at </th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @announcements.each do |announcement| %>
          <tr>
            <td><%= link_to announcement.announcement, announcement_path(announcement) %></td>
            <td><%= announcement.created_at.strftime("%d %B, %Y %H:%M %p") %></td>
            <td>
              <div class="btn-group btn-group-xs">
                    <%= link_to raw("<i class='fa fa-pencil'></i>"),edit_announcement_path(announcement), :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Edit" %>
                    <%= link_to raw("<i class='fa fa-times'></i>"),announcement_path(announcement),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), "data-toggle"=>"tooltip" ,:title=>"Delete" }, :class => 'btn btn-danger' %>
                  </div
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>    

