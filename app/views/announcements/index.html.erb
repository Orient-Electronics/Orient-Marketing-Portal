<%- model_class = Announcement -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped pull-left">
  <thead>
    <tr class="row-fluid">
      <th class="span6"><%= model_class.human_attribute_name(:announcement) %></th>
      <th class="span6"><%= model_class.human_attribute_name(:created_at) %></th>
      <th class="span3"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @announcements.each do |announcement| %>
      <tr class="row-fluid">
        <td class="span6"><%= link_to announcement.announcement, announcement_path(announcement) %></td>
        <td class="span3"><%= announcement.created_at.strftime("%d %B, %Y %H:%M %p") %></td>
        <td class="span3">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_announcement_path(announcement), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      announcement_path(announcement),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_announcement_path,
            :class => 'btn btn-primary' %>
