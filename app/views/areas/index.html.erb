<div class="block">
  <div class="block-title">
    <h2><strong>Area </strong></h2>
    <% if can? :create, Area %> 
      <div class="new-button pull-right">
        <%= link_to raw("<i class='gi gi-new_window_alt'></i> Add Area"), new_area_path,  :class => "btn btn-large btn-default" %>
      </div>
    <% end %> 
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-vcenter">
      <thead>
        <tr class="row-fluid">
          <th class="span6">Name</th>
          <th class="span6">City</th>
          <th class="span3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td>
              <%= link_to area.name, area_path(area) %>
            </td>
            <td> <%= area.city.try(:name) %></td>
            <td class="text-center">
              <div class="btn-group btn-group-xs">
                <%= link_to raw("<i class='fa fa-pencil'></i>"),edit_area_path(area), :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Edit" %>
                <%= link_to raw("<i class='fa fa-times'></i>"),area_path(area),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), "data-toggle"=>"tooltip" ,:title=>"Delete" }, :class => 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block-section clearfix">
    <div class="remove-margin pull-right">
      <%= paginate @areas %>
    </div>  
  </div>
</div>