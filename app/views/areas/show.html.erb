<div class="block">
  <div class="block-title">
    <h2><strong>Area </strong></h2>
    <% if can? :create, Area %> 
      <div class="new-button pull-right">
        <%= link_to raw("<i class='gi gi-new_window_alt'></i> Add Area"), new_area_path,  :class => "btn btn-large btn-default" %>
      </div>
    <% end %> 
  </div>

  <dl class="dl-horizontal">
    <dt><strong>Name :</strong></dt>
    <dd><%= @area.name %></dd>
    <dt><strong>City :</strong></dt>
    <dd><%= @area.city.name %></dd>
  </dl>

  <div class="form-group form-actions text-center btn-group-xs">
    <%= link_to raw("<i class='hi hi-arrow-left'></i>"),areas_path,:class => 'btn btn-default text-center ',"data-toggle" => "tooltip", :title=> "Back"  %>
     <%= link_to raw("<i class='fa fa-pencil'></i>"),edit_area_path(@area), :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Edit" %>
                <%= link_to raw("<i class='fa fa-times'></i>"),area_path(@area),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), "data-toggle"=>"tooltip" ,:title=>"Delete" }, :class => 'btn btn-danger' %>
  </div>
</div>