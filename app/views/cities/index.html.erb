<div class="block">
  <div class="block-title">
    <h2><strong>City </strong></h2>
    <% if can? :create, City %> 
      <div class="new-button pull-right">
        <%= link_to raw("<i class='gi gi-new_window_alt'></i> Add City"), new_city_path,  :class => "btn btn-large btn-default" %>
      </div>
    <% end %>   
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-vcenter">
      <thead>
        <tr class="row-fluid">
          <th class="span9">Name</th>
          <th class="span3">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @cities.each do |city| %>
          <tr>
            <td>
              <%= link_to city.name, city_path(city) %>
            </td>
            <td class="text-center">
              <div class="btn-group btn-group-xs">
                <%= link_to raw("<i class='fa fa-pencil'></i>"),edit_city_path(city), :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Edit" %>
                <%= link_to raw("<i class='fa fa-times'></i>"),city_path(city),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), "data-toggle"=>"tooltip" ,:title=>"Delete" }, :class => 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block-section clearfix">
    <div class="remove-margin pull-right">
      <%= paginate @cities%>
    </div>  
  </div>
</div>