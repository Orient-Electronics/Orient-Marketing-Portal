<%= form_for @dealer, :html => { :class => 'form-horizontal' ,:multipart => true } do |f| %>
  <div class= "error-box">
    <p><%= errors_for(@dealer, " unable to add new shop").html_safe %></p>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <%= f.fields_for :avatar do |f| %>
    <div class= "control-group">
      <%= f.label "Icon", :id => :avatar, :class => 'control-label'%>
      <div class="controls">
        <%= f.file_field :avatar ,:class => 'avatar_field' %>
      </div>
    </div>
  <% end -%>  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dealers_path, :class => 'btn' %>
  </div>
<% end %>
