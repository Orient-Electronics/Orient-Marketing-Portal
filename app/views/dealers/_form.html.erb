<%= form_for @dealer, :html => { :class => 'form-horizontal form-bordered', :id => "form-validation", :multipart => true } do |f| %>
  <div class= "form-group error-box">
    <p><%= errors_for(@dealer, "").html_safe %></p>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'col-md-2 control-label'%>
    <div class="col-md-5">
      <%= f.text_field :name, :class => 'form-control text_field required' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.fields_for :avatar do |f| %>
      <div class= "control-group">
        <%= f.label "Picture", :id => :avatar, :class => 'col-md-2  control-label'%>
        <div class="col-md-5">
          <%= f.file_field :avatar ,:class => 'form-control avatar_field required' %>
        </div>
      </div>
    <% end -%> 
  </div>  
  <div class="form-group form-actions text-center">
    <%= f.button raw("<i class='fa fa-angle-right'></i> Submit"), :class => 'btn btn-sm btn-success' %>
    <%= link_to raw("<i class='fa fa-angle-left'></i> Back"), dealers_path, :class => 'btn btn-sm btn-primary' %>              
  </div>
<% end %>
