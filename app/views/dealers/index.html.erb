      var oTable = $('#shop-data').dataTable();
      
      $('#shop-data_length, #shop-data_filter, #shop-data_paginate, #shop-data_info').addClass("no-background-border");
      $("#shop-data_length, #shop-data_info").addClass("pull-left");
      $(" #shop-data_paginate, #shop-data_filter").addClass("pull-right");
      
      $(".thefilter input").keyup( function () {
        /* Filter on the column (the index) of this element */
        oTable.fnFilter( this.value, $(".thefilter input").index(this) );
      });
      $(".search_btn").click( function ()
      {
        id = $(this).data("id");
        type = $(this).data("type")
          $.ajax ({
          url:  '/dealers/' + id + '/showmodal',
          data: {type: type},
          success: function(data)
          {                          
            $("#modal-user").html(data);
            $(".person-inform-link").click();
          }
        });
      });

      $('.report-search').ajaxForm({
        success: showResponse
