<div class="wrapper">
  <h1><a href="/"><img src="/assets/logo-big.png" alt="" class='retina-ready' width="59" height="49">Orient</a></h1>
  <div class="login-body">
    <h2>SIGN IN</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="control-group">
        <div class="email controls">
          <%= f.email_field :email, :autofocus => true, :class => "input-block-level" %>
        </div>
      </div>
      <div class="control-group">
        <div class="pw controls">
          <%= f.password_field :password, :class => "input-block-level" %>
        </div>
      </div>
      <div class="submit">
        <div class="remember">
          <%= f.check_box :remember_me, :class=>'icheck-me',:id=> "remember", "data-skin"=>"square", "data-color"=>"blue" %> <%= f.label :remember_me %>
        </div>
        <%= f.submit "Sign me in", :class => "btn btn-primary" %>
      </div>
    <% end -%>
    <div class="forget">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
