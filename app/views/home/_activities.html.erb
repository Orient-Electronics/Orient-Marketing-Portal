<% @activities.each do |activity| %>
  <div class="alert alert-info alert-alt my_activities">
    <small><%= activity.created_at.strftime("%B %d, %Y - %I:%M %p")%></small><br>
     <i class="fa fa-arrow-up fa-fw"></i>
     <% if activity.message.blank? %>
      You <%= render_activity activity %>
    <% else %>
      <%= render :partial => "/shared/post" , :locals => {:@activity => activity } %>
    <% end %>
  </div>
<% end %>

<script type="text/javascript">
	$(document).ready(function(){
		$('.activities .pagination').replaceWith("<%= j paginate @activities, :params => {:host => request.host, :port => request.port, :controller => 'home', :action => 'activities', :method => :get } %>");
	});
</script>