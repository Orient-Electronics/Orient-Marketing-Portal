    <a href="#" id="brand">ORIENT</a>
    <ul class='main-nav'>
      <li>
        <a href="/">
          <span>Dashboard</span>
        </a>
      </li>
      <li>
        <a href="#" data-toggle="dropdown" class='dropdown-toggle'>
          <span>Dealers Network</span>
          <span class="caret"></span>
        </a>
        <ul class='dropdown-menu'>
          <% if can? :read, Dealer %>
            <li class='dropdown-submenu'>
              <a href="#" data-toggle="dropdown" class='dropdown-toggle'>Dealers</a>
              <ul class="dropdown-menu">
                <li >
                  <a href="/dealers">View All</a>
                </li>
                <li>
                  <a href="/dealers/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, ShopCategory %>
            <li class='dropdown-submenu'>
              <a href="#">Shop Category</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/shop_categories">View All</a>
                </li>
                <li>
                  <a href="/shop_categories/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, City %>
            <li class="dropdown-submenu">
              <a href="#">City</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/cities">View All</a>
                </li>
                <li>
                  <a href="/cities/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, ProductCategory %>
            <li class="dropdown-submenu">
              <a href="#">Porduct Category</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/product_categories">View All</a>
                </li>
                <li>
                  <a href="/product_categories/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, Product %>
            <li class="dropdown-submenu">
              <a href="#">Product</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/products">View All</a>
                </li>
                <li>
                  <a href="/products/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, Brand %>
            <li class="dropdown-submenu">
              <a href="#">Brand</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/brands">View All</a>
                </li>
                <li>
                  <a href="/brands/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
          <% if can? :read, Role %>
            <li class="dropdown-submenu">
              <a href="#">Role</a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/roles">View All</a>
                </li>
                <li>
                  <a href="/roles/new">Add New</a>
                </li>
              </ul>
            </li>
          <% end -%>
        </ul>
      </li>
      <li>
        <a href="#" data-toggle="dropdown" class='dropdown-toggle'>
          <span>Tasks</span>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <a href="/tasks">View All</a>
          </li>
          <li>
            <a href="/tasks/new">Add New</a>
          </li>
        </ul>
      </li>
      <li>
        <a href="/svrs">
          <span>Shop visit reports</span>
        </a>
      </li>
    </ul>
    <div class="user">
      <% unless  @notifications.count <= 0 %>
        <div class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fa fa-envelope"></i>
            <span class="label label-lightred notification-count"><%= @notifications.count %></span>
          </a>
          <ul class="dropdown-menu pull-right message-ul" >
            <% @notifications.each do |notification|%>
              <li class="notification" data-notification = "<%= notification.id%>">
                <a href="javascript:void(0);">
                  <div class="image"><%= image_tag User.find(notification.owner.id).avatar.avatar(:small) %></div>
                  <div class="details">
                    <div class="name"><%= notification.owner.name %></div>
                    <div class="message">
                     <%= render_activity notification %>
                    </div>
                  </div>
                </a>
              </li>
            <% end -%>    
          </ul>
        </div>
      <% end -%>  
      <div class="dropdown">
        <a href="#" class='dropdown-toggle' data-toggle="dropdown"><%= current_user.name %> <%= image_tag current_user.get_avatar.avatar.url(:small_thumb), :size => "27x27" %></a>
        <ul class="dropdown-menu pull-right">
          <li>
            <%= link_to "View Profile", activities_path(:user_id => current_user.id)%>
          </li>
          <li>
            <%= link_to "Edit Profile", edit_user_registration_path%>
          </li>
          <li>
            <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
          </li>
        </ul>
      </div>
    </div>
    <%= render :partial => 'search/search' %>
  </div>
</div>