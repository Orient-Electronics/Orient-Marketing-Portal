<div class="block">
  <div class="block-title">
    <h2><strong>ProductCategory </strong></h2>
    <div class="pull-right btn-group btn-group-xs"><%= link_to raw("<i class='gi gi-new_window'></i>"),new_product_category_path,:class => 'btn btn-default btn-new text-center ',"data-toggle" => "tooltip", :title=> "Add New"  %>
    </div>  
  </div>
 
  <div class="table-responsive">
    <table class="table table-striped table-vcenter">
      <thead>
        <tr>
          <th>Name</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @product_categories.each do |product_category| %>
          <tr>
            <td>
              <%= link_to product_category.name, product_category_path(product_category) %>
            </td>
            <td class="text-center">
              <div class="btn-group btn-group-xs">
                <%= link_to raw("<i class='fa fa-pencil'></i>"),edit_product_category_path(product_category), :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Edit" %>
                <%= link_to raw("<i class='fa fa-times'></i>"),product_category_path(product_category),:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), "data-toggle"=>"tooltip" ,:title=>"Delete" }, :class => 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
  <div class="block-section clearfix">
    <div class="remove-margin pull-right">
      <%= paginate @product_categories %>
    </div>  
  </div> 
</div>
