<div class="step" id="firstStep">
  <div class="single-step">
    <span class="circle">
    <span class="active"></span>
    </span>
    <span class="description">
       <h3> Display Corner Information </h3> <hr />
    </span>
  </div>
</div>
<div class="step-forms ">
  <%= hidden_field_tag "report[c_report][report_type]",'', :value => "display_corner" %>
  <% product.brands.each_with_index do |brand,index| %>
      <%= hidden_field_tag "report[c_report][report_lines_attributes][#{index}][brand_id]","", :value => brand.id %>
      <%= hidden_field_tag "report[c_report][report_lines_attributes][#{index}][product_category_id]","", :value => @category.id %>
      <%= hidden_field_tag "report[c_report][report_lines_attributes][#{index}][product_id]","", :value => product.id %>  
      <div class="control-group">
        <%= label_tag "report[c_report][report_lines_attributes][#{index}][data]","#{brand.name} display corner", :class => 'control-label' %>
        <div class="controls">
          <div class = "radio-controls" remote ="true"  >
            <label class="radio" data-index = "<%= index %>" ><%= radio_button_tag "report[c_report][report_lines_attributes][#{index}][data]", "1" %>Yes</label>
            <label class="radio" data-index = "<%= index %>" ><%= radio_button_tag "report[c_report][report_lines_attributes][#{index}][data]", "0" %>No</label>
          </div>
          <% temp = 0 %>
          <div class= "parent-controls" remote ="true">
            <div class="child-controls">
            </div>
            <%= link_to "add", "#" , :class => "addAvatar hide" ,  data: { index: index}%>
          </div>
      </div>  
  <% end -%>
</div>
