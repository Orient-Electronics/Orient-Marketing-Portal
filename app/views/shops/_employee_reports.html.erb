<div class="row-fluid">
  <div class="span12">
    <div class="box box-color box-bordered">
      <div class="box-title">
        <h3>
          <i class="icon-bar-chart"></i>
          Display Report
        </h3>
        <div class="actions">
          <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
        </div>
      </div>
      <div class="box-content nonpadding scrollable" data-height ='500px' >
        <table class="table table-hover table-nomargin table-bordered dataTable-fixedcolumn dataTable-scroll-x dataTable-scroll-y">
          <thead>
            <tr>
              <th></th>
              <% @categories.each do |category|%>
                <th><%= category.name%></th>
              <% end -%>
            <tr/>
          </thead>
          <tbody>
            <%@brands.each do |brand|%>
              <tr>
                <th><%=brand.name%></th>
                <%@categories.each do |category| %>
                  <td>
                    <% sum=0 %>
                    <%display_report.each do |report|%>
                      <%if report.product_category_id == category.id && report.brand_id == brand.id%>
                        <% sum += report.data %>
                      <% end -%>
                    <% end -%>
                    <%= sum %>
                  </td>
                <%end%>
              </tr>
            <% end -%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
