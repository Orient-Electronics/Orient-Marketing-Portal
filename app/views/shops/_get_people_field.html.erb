<h3 class="form-portion-head"> People Information </h3>
<div class=" form-group">
	<label class="control-label col-md-1">Image</label>
	<div class="col-md-5">
    <input class="form-control text_field required" id="shop_peoples_attributes_<%= index %>_avatar_attributes_avatar" name="shop[peoples_attributes][<%= index %>][avatar_attributes][avatar]" type="file">
  </div>
</div>	
<div class=" form-group">
  <label class="control-label col-md-1">Name</label>
  <div class="col-md-5">
    <input class="form-control text_field required" id="shop_peoples_attributes_<%= index %>_name" name="shop[peoples_attributes][<%= index %>][name]" size="30" type="text">
  </div>
</div>
<div class="form-group">
  <label class="control-label col-md-1">Cell number</label>
  <div class="col-md-5">
    <input class="form-control text_field required" id="shop_peoples_attributes_<%= index %>_cell_number" name="shop[peoples_attributes][<%= index %>][cell_number]" size="30" type="text">
  </div>
</div>
<div class="form-group">
  <label class="control-label col-md-1">Designation</label>
  <div class="col-md-5">
    <input class="form-control text_field required" id="shop_peoples_attributes_<%= index %>_designation" name="shop[peoples_attributes][<%= index %>][designation]" size="30" type="text">
  </div>
</div>
<div class=" form-group">
  <label class="control-label col-md-1">Date of Birth</label>
  <div class="col-md-5">
    <input class="form-control date datepicker"  data-date-format = "dd-mm-yyyy"  id="shop_peoples_attributes_<%= index %>_date_of_birth" name="shop[peoples_attributes][<%= index %>][date_of_birth]" readonly="readonly" size="30" type="text"><span class="add-on"><i class="icon-th"></i></span>
  </div>
</div>

<script type="text/javascript">
	$(document).ready(function(){
		$('.datepicker').datepicker();
	});
</script>