<textarea class="hide dispaly_brand_data">
  <% brands.uniq.each do |brand| %>
    <%= [brand.name,Report.brand_display(reports,brand.id)].join("|") %>
    <%= "~" unless brand == brands.last %>
  <% end -%>
</textarea>
<textarea class="hide sale_brand_data">
  <% brands.uniq.each do |brand| %>
    <%= [brand.name,Report.brand_sales(reports,brand.id)].join("|") %>
    <%= "~" unless brand == brands.last %>
  <% end -%>
</textarea>

<div id='brand_data_chart' class="jFax-chart"></div>
<table class="table table-striped table-condensed chart-data-table">
  <thead>
    <tr>
      <th>Brand Name</th>
      <th>Dispaly Data</th>
      <th>Sales Data</th>
    </tr>
  </thead>
  <tbody>
    <% display_sum = sale_sum = count = 0   %>
    <% brands.uniq.each_with_index do |brand,index| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= Report.brand_display(reports, brand.id) %></td>
        <% display_sum += Report.brand_display(reports, brand.id) %>
        <td><%= Report.brand_sales(reports,brand.id) %></td>
        <% sale_sum += Report.brand_sales(reports, brand.id) %>
        <% count = index+1 %>
      </tr>
    <% end %> 
    <tr>
      <td class="form-portion-head"> Net Result</td>
      <td class="form-portion-head"> <%= display_sum/count %></td>
      <td class="form-portion-head"> <%= sale_sum %></td>
    </tr>


  </tbody>
</table>

<script type="text/javascript">
  $('document').ready(function(){
    loadBrandChart();  
  });
</script>