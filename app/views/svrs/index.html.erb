<div class="block">
  <div class="block-title">
    <h2>
      Shop Visit Reports
      <i class="fa fa-bar-chart-o"></i>
    </h2>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-vcenter">
      <thead>
        <tr>
          <th> S.No. </th>
          <th> Product Category </th>
          <th> City</th>
          <th> Shop Name </th>
          <th> Week No. </th>
          <th> Year </th>
          <th> Current status </th>
          <% if current_user.user_admin? or current_user.user_manager? %>
            <th> Created by</th>
            <th> Created at </th>
            <th> Action </th>
            <th>Change Status</th>
          <% end %>  
        <tr/>
      </thead>
      <tbody>
      <% @posts.each_with_index do |post, index| %>
        <tr>
          <td> <%= link_to  index+1, "/shops/#{post.shop_id}/svr/#{post.id}" %> </td>
          <td> <%= ProductCategory.find(post.product_category_id).name %> </td>
          <td> <%= post.shop.location.city.name %></td>
          <td> <%= link_to post.shop.dealer_name, shop_path(post.shop) %></td>
          <td class="text-center"> <%= "#{post.reports.first.week}" %> </td>
          <td> <%= post.reports.first.year %> </td>
          <td> <%= post.status %> </td>
          <td> <%= link_to post.user.name, activities_path(:user_id => post.user_id) %></td>
          <td> <%= post.created_at.strftime("%B %d, %Y - %I:%M %p") %> </td>
          <% if current_user.user_admin? or current_user.user_manager? %>
            <td class="text-center"> 
              <div class="btn-group btn-group-xs">
                <%= link_to raw("<i class='fa fa-pencil'></i>"),  "/shops/#{post.shop_id}/svrs/#{post.id}/edit", :class => 'btn btn-default', "data-toggle" => "tooltip", :title=> "Update" %>
               <%= link_to raw("<i class='fa fa-times'></i>"),  "/shops/#{post.shop_id}/svrs/#{post.id}", :method => :delete, :confirm => "are you sure? ", "data-toggle"=>"tooltip" ,:title=>"Delete", :class => 'btn btn-danger'  %> 
              </div> 
            </td>
            <td>
              <ul class="nav nav-bar">  
                <li class="dropdown">
                  <a href="javascript:void(0)" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-wrench"></i></a>
                  <ul class="dropdown-menu dropdown-custom dropdown-menu-right">
                    <li><%= link_to "Publish", publish_report_tasks_path(:post_id => post.id) %></li>
                    <li><%= link_to "Unpublished", unpublish_report_tasks_path(:post_id => post.id)%></li>
                    <li><%= link_to "Draft", draft_report_tasks_path(:post_id => post.id)%></li>
                  </ul>  
                </li>  
              </ul> 
            </td>  
          <% end %>   
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>  
</div>